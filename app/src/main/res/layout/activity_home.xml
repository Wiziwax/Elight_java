<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activities.HomeActivity">

    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".Activities.HomeActivity">

            <!-- Your existing LinearLayout with android:layout_height="wrap_content" instead of match_parent -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:id="@+id/topLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- First TextView -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_background"
                        android:gravity="center"
                        android:text="W"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Nested Vertical LinearLayout -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hi, Wisdom"
                            android:textColor="@color/whiteText"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Unverified"
                                android:textColor="@color/whiteText"
                                android:textSize="12dp" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:paddingVertical="2dp"
                                android:src="@drawable/verified2" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Adding layout_weight to this View -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <!-- endIcons LinearLayout -->
                    <LinearLayout
                        android:id="@+id/endIcons"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/circle_background"
                            android:padding="5dp"
                            android:src="@drawable/white_notification" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/circle_background"
                            android:padding="5dp"
                            android:src="@drawable/white_settings" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Explore"
                        android:textColor="@color/whiteText"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="build a better life"
                        android:textColor="@color/whiteText"
                        android:textSize="12sp" />


                    <!-- CardView with curved edges -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/mainCardMap"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="@color/orange1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/main_relative_layout_rounded_background">

                            <!-- ImageView for the image -->
                            <ImageView
                                android:id="@+id/cardImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/elight1" /> <!-- Replace with your image resource -->

                            <!-- Button as a circular rectangle -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_margin="16dp"
                                android:backgroundTint="@color/orange"
                                app:cardCornerRadius="50dp"
                                app:cardElevation="2dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingHorizontal="16dp"
                                    android:paddingVertical="7dp"
                                    android:text="View Map"
                                    android:textColor="@android:color/white"
                                    android:textSize="11sp" />
                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configure"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/whiteText"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <!-- Left LinearLayout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/homeActivityDeviceManager"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_gradient_background">


                        <!-- Content Area -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:padding="8dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/devices_icon"
                            android:layout_gravity="center_vertical"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical"

                                >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Device Manager"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_marginStart="10dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Manage and keep track of our devices"
                                    android:textAlignment="center"
                                    android:textSize="10sp"/>

                            </LinearLayout>



                        </LinearLayout>
                    </LinearLayout>

                    <!-- Right LinearLayout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:orientation="vertical"
                        android:id="@+id/homeActivityFavourites"
                        android:background="@drawable/rounded_gradient_background_right">


                        <!-- Content Area -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:padding="10dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/gold_favourite"
                                    android:layout_gravity="center_vertical"
                                    android:id="@+id/homePageFavourite"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp"
                                    android:orientation="vertical"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Favourites"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:layout_gravity="center_horizontal"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:text="View your favourite places"
                                    android:textSize="10sp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


                <!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginTop="16dp"-->
<!--                    android:text="Categories"-->
<!--                    android:textColor="@color/whiteText"-->
<!--                    android:textSize="18sp"-->
<!--                    android:textStyle="bold" />-->

<!--                <androidx.recyclerview.widget.RecyclerView-->
<!--                    android:id="@+id/categoriesRecyclerView"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="70dp"-->
<!--                    android:layout_marginTop="8dp"-->
<!--                    android:clipToPadding="false"-->
<!--                    android:orientation="horizontal"-->
<!--                    android:paddingStart="4dp"-->
<!--                    android:paddingEnd="4dp" />-->



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Features"
                        android:textColor="@color/whiteText"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <!-- CardView with curved edges -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2HomeActivity"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/main_relative_layout_rounded_background">

                            <ImageView
                                android:id="@+id/cardImage2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/elight4" /> <!-- Replace with your image resource -->


                            <!-- Button as a circular rectangle -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_margin="16dp"
                                android:backgroundTint="@color/orange"
                                app:cardCornerRadius="50dp"
                                app:cardElevation="2dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingHorizontal="16dp"
                                    android:paddingVertical="10dp"
                                    android:text="Coming soon"
                                    android:textColor="@android:color/white"
                                    android:textSize="11sp" />
                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/orange1"
        app:itemTextColor="@color/white"
        app:elevation="8dp"
        app:itemIconTint="@color/white"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu" />
</RelativeLayout>